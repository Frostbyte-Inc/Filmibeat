<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="20dp"
    android:padding="20dp"
    app:cardBackgroundColor="@color/colorDarkGrey"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/action_card_icon_view"
            android:layout_width="@dimen/dp_image_view_size_small"
            android:layout_height="@dimen/dp_image_view_size_small"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin"
            android:scaleType="center"
            tools:src="@drawable/common_google_signin_btn_text_dark" />

        <TextView
            android:id="@+id/action_card_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:background="@color/colorDarkGrey"
            tools:text="Reviews" />

    </LinearLayout>
</merge>
