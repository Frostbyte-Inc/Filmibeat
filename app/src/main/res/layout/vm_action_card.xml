<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_margin"
    android:background="@color/colorDarkBackgroundGrey2"
    app:cardCornerRadius="10dp"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorDarkBackgroundGrey2">

    <ImageView
        android:id="@+id/action_card_icon_view"
        android:layout_width="@dimen/dp_image_view_size_small"
        android:layout_height="@dimen/dp_image_view_size_small"
        tools:src="@drawable/common_google_signin_btn_icon_light"
        android:scaleType="center"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginStart="@dimen/default_margin"/>

    <TextView
        android:id="@+id/action_card_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        tools:text="Global Chat" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
