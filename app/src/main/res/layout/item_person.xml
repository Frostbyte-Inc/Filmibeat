<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:background="@color/colorDarkBackgroundGrey1"
    android:orientation="vertical">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/itemPerson_displayPicture"
        android:layout_width="@dimen/dp_image_view_size_medium"
        android:layout_height="@dimen/dp_image_view_size_medium"
        android:layout_margin="@dimen/small_margin"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        app:shapeAppearance="@style/CircularImageView"
        app:srcCompat="@drawable/default_dp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/itemPerson_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginEnd="@dimen/default_margin"
        android:fontFamily="@font/muli_bold"
        tools:text="Christopher Nolan" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/itemPerson_designation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginEnd="@dimen/default_margin"
        android:fontFamily="@font/muli_light"
        android:layout_gravity="center"
        tools:text="Director" />

</LinearLayout>